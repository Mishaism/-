#include <stdio.h>
#include <stdlib.h>

int main() {
    
    double x1, y1, x3, y3;

    
    printf("Введите координаты точки A (x1, y1): ");
    scanf("%lf %lf", &x1, &y1);
    printf("Введите координаты точки C (x3, y3): ");
    scanf("%lf %lf", &x3, &y3);

  
    double width = fabs(x3 - x1); // Ширина
    double height = fabs(y3 - y1); // Высота

  
    double area = width * height;
    double perimeter = 2 * (width + height);

  
    printf("Площадь прямоугольника: %.2fn", area);
    printf("Периметр прямоугольника: %.2fn", perimeter);

    return 0;
}
